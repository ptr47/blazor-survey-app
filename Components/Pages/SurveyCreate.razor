@page "/survey/create"

@using WebApp.Models
@using System.ComponentModel.DataAnnotations

<h1>Create New Survey</h1>

<EditForm Model="@Survey" OnValidSubmit="Submit" FormName="SurveyData">
    <DataAnnotationsValidator />
    <div class="form-group m-3">
        <label>Title:</label>
        <InputText Id="Title" Class="form-control" @bind-Value="Survey.Title" />
        <ValidationMessage For="@(() => Survey.Title)" />
    </div>
    <div class="form-group m-3">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</EditForm>


@code {
    [SupplyParameterFromForm]
    public Survey? Survey { get; set; }
    protected override void OnInitialized() => Survey ??= new();
    public void Submit()
    {
        // TODO
    }

}
